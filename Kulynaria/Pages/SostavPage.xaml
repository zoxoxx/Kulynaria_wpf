<Page x:Class="Kulynaria.Pages.SostavPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kulynaria.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SostavPage">

    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="391*"/>
        </Grid.RowDefinitions>

        <Button Content="Назад"  Name="btn_back" Click="btn_back_Click" Grid.Row="0"/>

        <DataGrid x:Name="dgSostav" AutoGenerateColumns="true" Grid.Row="1" Width="Auto"  VerticalAlignment="Stretch" Height="Auto">
            
        </DataGrid>

    </Grid>
</Page>
